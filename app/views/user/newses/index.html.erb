<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <table border="1" style="border-collapse: collapse">
        <tr>
          <h3 class="text-center">お知らせ一覧</h3>
        </tr>
        <tr>
          <td></td>
          <td>タイトル</td>
          <td>更新日</td>
        </tr>
<br>
        <% @newses.each do |news| %>
        <tr>
          <th><%= image_tag 'pic1.jpg', width: '60', height: '60' %></th>
          <td>
            <%= link_to user_newse_path(news) do %>
              <%= news.title %>
            <% end %>
          </td>
          <td>
            <%= news.created_at.strftime("%Y年%m月%d日") %>更新
          </td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
