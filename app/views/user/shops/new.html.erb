<div class="container">
  <div class="row">
    <div class="card col-sm-6 mx-auto mt-5">
      <div class="card-body">
        <h3 class="mt-1 mb-3">登録情報編集</h3>
        <%= form_with model: @shop, url: user_shops_path, local:true do |f| %>

        <div class="form-group">
          <%= f.label :shop_image, "写真", :class => "form-label" %>
          <%= f.attachment_field :shop_image, autocomplete: "shop_image", :class => "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :name, "店名", :class => "form-label" %>
          <%= f.text_field :name, autocomplete: "name", :class => "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :introduction, "お店紹介文", :class => "form-label" %>
          <%= f.text_field :introduction, autocomplete: "introduction", :class => "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :address, "住所", :class => "form-label" %>
          <%= f.text_field :address, :class => "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :"ジャンル", :class => "form-label" %>
          <%= f.collection_select(:genre_id, @genres, :id, :name, autocomplete: "genre_id", :class => "form-control") %>
        </div>

        <div class="form-group">
          <%= f.label :"営業時間", :class => "form-label" %>
          <%= f.time_select :start_business_hours, autocomplete: "start_business_hours", :class => "form-control" %>~<%= f.time_select :finish_business_hours, autocomplete: "finish_business_hours", :class => "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :"最寄駅", :class => "form-label" %>
          <%= f.text_field :station, autocomplete: "station", :class => "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :"電話番号(ハイフンなし)", :class => "form-label" %>
          <%= f.text_field :phone_number, autocomplete: "phone_number", :class => "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :"ホームページ", :class => "form-label" %>
          <%= f.text_field :home_page, autocomplete: "home_page", :class => "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :"定休日", :class => "form-label" %>
          <%= f.text_field :holiday, autocomplete: "holiday", :class => "form-control" %>
        </div>

        <div class="actions">
          <%= f.submit "新規登録する", :class => "btn btn-primary btn-block" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>