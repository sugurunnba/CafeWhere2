<%= form_with model: @review, url: "/user/shops/#{params[:shop_id]}/reviews", local: true do |f| %>
  <%= f.hidden_field :shop_id, value: @shop.id %>
  <div class="col-md-6 col-md-offset-3">
    <div class="field" id="star">
        <%= f.label :rate %>
        <%= f.hidden_field :rate, id: :review_rate %>
    </div>

    <%= f.text_field :title, :class => "form-control", :size => "50x20"  %>
    <%= f.text_area :body, :class => "form-control", :size => "50x20" %><br>
    <%= f.submit "レビュー評価", :class => "btn btn-primary" %>
  </div>
<% end %>

<script>
$('#star').raty({
  size     : 36,
  starOff:  '<%= asset_path('star-off.png') %>',
  starOn : '<%= asset_path('star-on.png') %>',
  scoreName: 'review[rate]'
});
</script>