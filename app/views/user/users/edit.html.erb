<div class="row">
  <div class="col-xs-12">

    <h2 class="head-line title_h2 text-center">登録情報編集</h2>
      <%= form_with model: @user, url: user_user_path(@user), local:true do |f| %>

      <div class="col-xs-10">
        <div class="form-group col-xs-12">
          <%= f.label :"氏名", class: "col-sm-3 control-label" %>
          (姓)<%= f.text_field :first_name, class: "last_name col-sm-3 form-control-static name" %>
          (名)<%= f.text_field :last_name, class: "first_name col-sm-3 form-control-static name" %>
        </div>
        <div class="form-group col-xs-12">
          <%= f.label :"メールアドレス", class: "col-sm-3 control-label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-sm-6 form-control-static" %>
        </div>
        <div class="form-group col-xs-12">
          <%= f.label :"住所", class: "col-sm-3 control-label" %>
          <%= f.text_field :address, class: "col-sm-7 form-control-static" %>
        </div>
        <div class="form-group col-xs-12">
          <%= f.label :"電話番号(ハイフンなし)", class: "col-sm-3 control-label" %>
          <%= f.text_field :phone_number, class: "col-sm-2 form-control-static" %>
        </div>
        <div class="form-group col-xs-12">
          <%= f.label :gender, "男性" %>
          <%= f.radio_button :gender, 1, autofocus: true, autocomplete: "gender" %>
          <%= f.label :gender, "女性" %>
          <%= f.radio_button :gender, 2, autofocus: true, autocomplete: "gender" %>
        </div>
      <div class="actions col-xs-9 col-xs-offset-3">
        <%= f.submit "編集内容を保存する", class: "btn btn-primary save col-xs-6" %>
        <%= link_to '退会する', quit_user_users_path, class: "glyphicon glyphicon-tint btn btn-danger"%>
      </div>
    <% end %>
    <div class="col-xs-12">
      <%= link_to "戻る", user_user_path, class: "glyphicon glyphicon-home btn btn-info" %>
    </div>
  </div>
</div>