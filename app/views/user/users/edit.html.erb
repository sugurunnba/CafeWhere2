<div class="container">
  <div class="row">
    <div class="card col-sm-6 mx-auto mt-5">
      <div class="card-body">
        <h3 class="mt-1 mb-3">登録情報編集</h3>
        <%= form_with model: @user, url: user_user_path(@user), local:true do |f| %>

        <div class="form-group">
          <%= f.label :"氏名", class: "col-sm-3 control-label" %>
          <%= f.text_field :name, autocomplete: "name", :class => "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :email, "メールアドレス", :class => "form-label" %>
          <%= f.email_field :email, autocomplete: "email", :class => "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :address, "住所", :class => "form-label" %>
          <%= f.text_field :address, :class => "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :"電話番号(ハイフンなし)", class: "col-sm-3 control-label" %>
          <%= f.text_field :phone_number, autocomplete: "phone_number", :class => "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :gender, "男性", class: "col-sm-3 control-label" %>
          <%= f.radio_button :gender, 1, autofocus: true, autocomplete: "gender", :class => "form-control" %>
          <%= f.label :gender, "女性", class: "col-sm-3 control-label" %>
          <%= f.radio_button :gender, 2, autofocus: true, autocomplete: "gender", :class => "form-control" %>
        </div>

        <div class="actions">
          <%= f.submit "編集を保存する", :class => "btn btn-primary btn-block" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

