<div class="fh5co-counters" style="background-image: url(<%= asset_path('pic1.jpg') %>)">
	<!--assetのディレクトリから探してくれるパス-->
	<div class="row">
		<div class="col-md-6 col-md-offset-3 text-center animate-box" style="opacity:1">
			<div class="heading-section">
				<h2>アプリ情報</h2>
			</div>
		</div>
	</div>
	<div class="fh5co-narrow-content animate-box" style="opacity:1">
		<div class="row" >
			<div class="col-md-4 text-center">
				<span class="fh5co-counter js-counter" data-from="0" data-to="<%= @users.count %>" data-speed="5000" data-refresh-interval="50"></span>
				<span class="fh5co-counter-label">登録ユーザー数</span>
			</div>
			<div class="col-md-4 text-center">
				<span class="fh5co-counter js-counter" data-from="0" data-to="<%= @shops.count %>" data-speed="5000" data-refresh-interval="50"></span>
				<span class="fh5co-counter-label">登録カフェ数</span>
			</div>
			<div class="col-md-4 text-center">
				<span class="fh5co-counter js-counter" data-from="0" data-to="<%= @reviews.count %>" data-speed="5000" data-refresh-interval="50"></span>
