<div class="row">
	<div class="col-xs-offset-1 col-xs-8">
		<h2 class="head-line text-center title_h2"><%= @user.name %>さんのマイページ</h2>
		<p><strong class="information-link"><i class="far fa-user"></i>登録情報</strong>
			<% if @user == current_user %>
 				<%= link_to "編集する", edit_user_user_path(@user),class: "glyphicon glyphicon-pencil btn btn-success"  %>
  			<%= link_to "パスワードを変更する", edit_user_registration_path, class: "glyphicon glyphicon-pencil btn btn-warning" %>
 			<% end %>
 		</p>
		<table class="table table-bordered table-condensed" >
			<tbody>
				<tr>
					<td class="info">氏名</td>
					<td class="text-left"><%= @user.name %><%= @user.name %></td>
				</tr>
				<tr>
					<td class="info">住所</td>
					<td class="text-left"><%= @user.address %></td>
				</tr>
				<tr>
					<td class="info">電話番号</td>
					<td class="text-left"><%= @user.phone_number %></td>
				</tr>
				<tr>
					<td class="info">メールアドレス</td>
					<td class="text-left"><%= @user.email %></td>
				</tr>
			</tbody>
		</table>
	</div>
</div>