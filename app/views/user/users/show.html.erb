<div class="container">
	<div class="row">
		<div class="col-md-offset-1 col-md-10">
			<table>
				<thead>
					<h3 class="text-center"><%= @user.name %>さんのユーザー情報</h3>
				</thead>
				<br><br>
				<tbody>
					<tr>
				    <th>氏名</th>
				    <td><%= @user.name %></td>
				  </tr>
				  <tr>
				    <th>住所</th>
				    <td><%= @user.address %></td>
				  </tr>
				  <tr>
				    <th>電話番号</th>
				    <td><%= @user.phone_number %></td>
				  </tr>
				  <tr>
				    <th>メールアドレス</th>
				    <td><%= @user.email %></td>
				  </tr>
				</tbody>
			</table>
 <br>
 			<% if @user == current_user %>
			<table>
			  <tr>
			  	<td><%= link_to "カフェ登録リクエスト", new_user_shop_path, :class => "btn btn-primary" %></td>
					<td>
						<% if @user == current_user %>
							<%= link_to "ユーザー情報を編集する", edit_user_user_path(@user), :class => "btn btn-primary" %>
						<% end %>
					</td>
			  </tr>
			  <tr>
			  	<td></span><%= link_to "お問い合わせする", new_user_contact_path, :class => "btn btn-primary" %></td>
			  	<td><%= link_to "ログアウト", destroy_user_session_path, method: :delete, :class => "btn btn-primary" %></td>
			  </tr>
			</table>
			<% end %>
		</div>
	</div>
</div>





