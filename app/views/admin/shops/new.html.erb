<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <table border="1" style="border-collapse: collapse">
        <thead>
          <tr>
  	        <h5 class="text-center" style="color: limegreen"><%= flash[:success] %></h5>
  	      </tr>
  	      <tr>
            <h3 class="text-center">登録申請カフェ一覧</h3>
            <p class="text-center">申請中のカフェがあれば表示されます</p>
          </tr>
        </thead>

<br>
        <% @shops.each do |shop| %>
          <% if shop.is_active == "申請中"  %>
          <tbody>
            <tr>
              <td><%= shop.id %></td>
              <td>
                <%= link_to edit_admin_shop_path(shop) do %>
                  <%= shop.name %>
                <% end %>
              </td>
            </tr>
          </tbody>
          <% end %>
        <% end %>
        <tr>
  	  		<%= paginate @shops %>
  			</tr>
      </table>
    </div>
  </div>
</div>
