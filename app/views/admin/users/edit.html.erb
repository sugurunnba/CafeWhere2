<div class="container">
  <div class="row">
    <div class="card col-sm-6 mx-auto mt-5">
      <div class="card-body">
        <h3 class="mt-1 mb-3"><%= @user.name %>様のアカウント修正</h3>
        <%= form_with model: @user, url: admin_user_path(@user), local:true do |f| %>

        <div class="form-group">
          <%= f.label :name, "ニックネーム", :class => "form-label" %>
          <%= f.text_field :name, autocomplete: "name", :class => "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :text, "電話番号", :class => "form-label" %>
          <%= f.text_field :phone_number, autocomplete: "phone_number", :class => "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :text, "住所", :class => "form-label" %>
          <%= f.text_field :address, autocomplete: "address", :class => "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :gender, "男性" %>
          <%= f.radio_button :gender, :male, autofocus: true, autocomplete: "gender" %>
          <%= f.label :gender, "女性" %>
          <%= f.radio_button :gender, :famale, autofocus: true, autocomplete: "gender" %>
        </div>

        <div class="form-group">
          <%= f.label :email, "メールアドレス", :class => "form-label" %>
          <%= f.email_field :email, autocomplete: "email", :class => "form-control" %>
        </div>

        <div class="form-group">
          <%= f.radio_button :user_status, false, checked: true %>
          <%= f.label :user_status, "有効" %>
          <%= f.radio_button :user_status, true %>
          <%= f.label :user_status, "退会済み" %>
        </div>

        <div class="actions">
          <%= f.submit "編集する", :class => "btn btn-primary btn-block" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>