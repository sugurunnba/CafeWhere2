<div class="container">
  <div class="row">
    <div class="card col-sm-6 mx-auto mt-5">

      <div>
        <i class="fa fa-history"></i><%= link_to "戻る", admin_genres_path %>
      </div>

      <%= render 'layouts/error_messages', messages: @genre %>

      <div class="card-body">
        <h3 class="mt-1 mb-3 text-center">ジャンル登録</h3>
        <%= form_with model: @genre, url: admin_genres_path, local:true do |f| %>

        <div class="form-group">
          <%= f.label :name, "ジャンル名", :class => "form-label" %>
          <%= f.text_field :name, autocomplete: "name", :class => "form-control" %>
        </div>

        <div class="actions">
          <%= f.submit "新規登録する", :class => "btn btn-primary btn-block" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

