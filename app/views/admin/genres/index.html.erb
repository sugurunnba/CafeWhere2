<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <table border="1">
        <thead>
          <tr>
            <h5 class="text-center" style="color: limegreen"><%= flash[:success] %></h5>
          </tr>
          <tr>
            <h3 class="text-center">ジャンル一覧</h3>
          </tr>
<br>
          <tr>
            <%= link_to "ジャンル登録する", new_admin_genre_path %>
          </tr>
          <tr>
            <td>ID</td>
            <td>ジャンル名</td>
            <td></td>
            <td></td>
          </tr>
        </thead>
        <% @genres.each do |genre| %>
        <tbody>
          <tr>
            <td><%= genre.id %></td>
            <td><%= genre.name %></td>
            <td><%= link_to "編集する", edit_admin_genre_path(genre), :class => "btn btn-primary"  %>&nbsp;<%= link_to "削除する", admin_genre_path(genre), method: :delete, :class => "btn btn-primary"  %></td>
            <td></td>
          </tr>
        </tbody>
        <% end %>
        <tr>
  	  		<%= paginate @genres %>
  			</tr>
      </table>
    </div>
  </div>
</div>
