<div class="container">
  <div class="row">
    <div class="card col-sm-6 mx-auto mt-5">
      <div class="card-body">
        <h3 class="mt-1 mb-3">お知らせ登録</h3>
        <%= form_with model: @news, url: admin_newses_path, local:true do |f| %>

        <div class="form-group">
          <%= f.label :news_image, "お知らせ写真", :class => "form-label" %>
          <%= f.attachment_field :news_image, autocomplete: "news_image" %>
        </div>

        <div class="form-group">
          <%= f.label :title, "お知らせタイトル", :class => "form-label" %>
          <%= f.text_field :title, autocomplete: "title", :class => "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :text, "お知らせ本文", :class => "form-label" %>
          <%= f.text_field :text, autocomplete: "text", :class => "form-control" %>
        </div>

        <div class="actions">
          <%= f.submit "新規登録する", :class => "btn btn-primary btn-block" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>